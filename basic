#include <stdio.h>

int main() {
    int numero, outro_numero, soma;
    
    printf("Oi! Digite um numero qualquer: ");
    if (scanf("%d", &numero) != 1) {  
        printf("Erro: Voce nao digitou um numero!\n");
        return 1;  // Retorna erro
    }
    
    printf("Agora digite outro numero: ");
    if (scanf("%d", &outro_numero) != 1) {
        printf("Erro: Voce nao digitou um numero!\n");
        return 1;
    }
    
    soma = numero + outro_numero;
    printf("A soma dos dois numeros eh: %d\n", soma);
    
    // Limpar o buffer de entrada
    while (getchar() != '\n');
    
    char letra;
    printf("Agora me fala uma letra: ");
    if (scanf("%c", &letra) != 1) {
        printf("Erro na leitura da letra!\n");
        return 1;
    }
    
    printf("Voce digitou a letra: %c\n", letra);
    
    return 0;
}
